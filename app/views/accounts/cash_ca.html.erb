<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Cash-Current Asset Balance Sheet</h1>  | <%= link_to 'Back', accounts_path %>
  <p>This table show the available cash on hand and also the transaction</p>                                                                                      
  <div class="table-responsive">          
  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Opening Balance</th>
        <th>Debit</th>
        <th>Debit Description</th>
        <th>Credit</th>
        <th>Credit Description</th>
        <th>Balance Amount</th>
      </tr>
    </thead>
<% @account_cash.each do |account| %>
    <tbody>
      <tr>
        <td><%= account.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= link_to number_to_currency(account.opening_cash),account if account.opening_cash? %></td>
        <td><%= link_to number_to_currency(account.cash_collection_amount),account if account.cash_collection_amount? %></td>
        <td><%= account.open_cash_description %><%= account.cash_collection_description %></td>
        <td>
        <%= link_to number_to_currency(account.cash_purchase_amount),account if account.cash_purchase_amount? %>
        <%= link_to number_to_currency(account.payment_creditor_cash_amount),account if account.payment_creditor_cash_amount? %>
        <%= link_to number_to_currency(account.recurring_payment_amount),account if account.recurring_payment_amount? %>
        <%= link_to number_to_currency(account.asset_purchase_cash_amount), account if account.asset_purchase_cash_amount? %>
        </td>
        <td>
        <%= (account.cash_purchase_description)%>
        <%= account.payment_creditor_cash_description %>
        <%= account.recurring_payment %>
        <%= account.asset_purchase_cash_description %>
        </td>
        <% end %>
        <td><%= number_to_currency(@total_cash) %></td>
      </tr>
      
    </tbody>
  </table>
  </div>
</div>


<div class="container">
  <h1>Bank-Current Asset Balance Sheet</h1> | <%= link_to 'Back', accounts_path %>
