  <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Opening Balance</th>
        <th>Debit</th>
        <th>Debit Description</th>
        <th>Credit</th>
        <th>Credit Description</th>
        <th>Balance Amount</th>
      </tr>
    </thead>
<% @account_bank.each do |account| %>
    <tbody>
      <tr>
        <td><%= account.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= link_to number_to_currency(account.opening_bank),account if account.opening_bank? %></td>
        <td>
        <%= link_to number_to_currency(account.bank_transfer_amount),account if account.bank_transfer_amount? %>
        <%= link_to number_to_currency(account.fpx_collection_amount),account if account.fpx_collection_amount?  %>
        <%= link_to number_to_currency(account.card_collection_amount),account if account.card_collection_amount? %>
        </td>
        <td>
        <%= account.bank %>
        <%= (account.bank_transfer_description) %>
        <%= (account.fpx_collection_description) %>
        <%= (account.card_collection_description) %></td>
        <td>
        <%= link_to number_to_currency(account.payment_creditor_bank_amount),account if account.payment_creditor_bank_amount?  %>
        <%= link_to number_to_currency(account.recurring_payment_bank_amount),account if account.recurring_payment_bank_amount?  %>
        <%= link_to number_to_currency(account.asset_purchase_bank_amount),account if account.asset_purchase_bank_amount?  %>
        </td>
        <td><%= (account.payment_creditor_bank_description) %>
        <%= (account.recurring_payment_bank) %> <%= account.asset_purchase_bank_description %></td>
        <% end %>
        <td><%= number_to_currency(@total_bank) %></td>
      </tr>
      
    </tbody>
  </table>
  </div>