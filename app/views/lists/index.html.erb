<p id="notice"><%= notice %></p>
    <div class="container">

        <div class="row">

            <div class="col-md-3">
                <p class="lead">Shop Name</p>
                <div class="list-group">
                    <a href="/index" class="list-group-item">Find All Merchant</a>
                    <a href="/index" class="list-group-item">Special Offer</a>
                    <a href="/" class="list-group-item">Find Near Me(5KM)</a>
                </div>
            </div>
            
            <div class="col-md-9">

                <div class="row carousel-holder">

                    <div class="col-md-12">
                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#" data-slide-to="0" class="active"></li>
                                <li data-target="#" data-slide-to="1"></li>
                                <li data-target="#" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src="assets/bike.jpg" alt="bike accessories">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="assets/car.jpg" alt="car sales">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="assets/s8.jpg" alt="mobile phone and accessories">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>
                    </div>

                </div>
                <br />
                <div class="row">
                  <% @lists.each do |list| %>
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <%= image_tag (list.image.medium) %>
                            <div class="caption">
                                <h4 class="pull-right">RM <%= list.price %></h4>
                                <h4>><%= link_to list.title,list %></h4>
                                </h4>
                                <p><%= list.description %></p>
                            </div>
                            <div class="ratings">
                                <p class="pull-right">15 reviews</p>
                                <p>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                    <span class="glyphicon glyphicon-star"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% end %>
                    

                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <h4><a href="#">Need Help ??</a>
                        </h4>
                        <p>On how to list your products or use our simple yet powerful accounting application?<a target="_blank" href="#"> Click this tutorial</a> or call 012-7205562 (regarding speacial offer)</p>
                        <a class="btn btn-primary" target="_blank" href="#">Special Offer</a>
                    </div>

                </div>

            </div>

        </div>

    </div>
    <!-- /.container -->

    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Your Website 2014</p>
                </div>
            </div>
        </footer>

    </div>
