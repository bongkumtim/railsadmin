<div class="container">
<div class="col-md-9">

                <div class="thumbnail">
                    <%= image_tag (@offer.image.url),:size=> '800x300', :class=> "img-responsive" if @offer.image?  %>
                    <div class="caption-full">
                        <h4 class="pull-right">RM <%= sprintf('%.2f', @offer.price) if @offer.price? %></h4>
                        <h4><%= @offer.title %>
                        </h4>
                        <p><%= @offer.description %></p>

                        <% if current_user == @offer.user %>
                        <p><%= link_to 'Edit', edit_list_path(@offer) %> | <%= link_to 'Destroy', @offer, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                        <% else %>
                        <p><%= link_to 'Back', lists_path %></p>
                        <% end %>
                    </div>
                </div>
</div>
</div>